<div class="container-fluid" id="container-fluid">
    <br><br>
    <div class="row">
        <div class="col-4">
            <form action="/courses/{{course._id}}?_method=PUT" method="POST" class="form-edit-course needs-validation"
                novalidate>
                <input type="hidden" name="_method" value="PUT">
                <h4>Edit Course</h4>
                <hr>
                {{#each course.subjects}}
                <h2>{{name}}</h2>
                <div class="col" style="text-align: right;">
                    <div class="dropdown" id="customized-dropdown">
                        <button type="button" class="btn btn-default" data-toggle="dropdown">
                            <i class="fa fa-ellipsis-v"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right animated fadeIn">
                            <li class="view-item">
                                <a class="dropdown-item"
                                    href="/courses/report?id={{../course._id}}&type=Quarterly&subject={{name}}">
                                    Quarterly
                                </a>
                            </li>
                            <li class="view-item">
                                <a class="dropdown-item"
                                    href="/courses/report?id={{../course._id}}&type=Halfyearly&subject={{name}}">
                                    Half yearly
                                </a>
                            </li>
                            <li class="view-item">
                                <a class="dropdown-item"
                                    href="/courses/report?id={{../course._id}}&type=Annually&subject={{name}}">
                                    Annually
                                </a>
                            </li>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="name">Subject Name</label>
                            <input type="text" name="name" class="form-control" value="{{name}}"
                                placeholder="Course Name" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="examDate">Exam Date </label>
                            <input id="datepicker" type="text" value="{{examDate}}" class="form-control" name="examDate"
                                placeholder=" Month/ Date/ Year">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="Class">Select Marking Type( <span>*</span> )</label>
                            <select name="markingType" class="form-control custom-select" required>
                                {{#select markingType}}
                                <option value="">Choose...</option>
                                <option value="Number">Number</option>
                                <option value="Grade">Grade</option>
                                {{/select}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="passingMarks">Passing Marks</label>
                            <input type="text" id="passingMarks" class="form-control" value="{{passingMarks}}"
                                name="passingMarks" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="maxMarks">Max Marks</label>
                            <input type="text" id="maxMarks" class="form-control" value="{{maxMarks}}" name="maxMarks"
                                required>
                        </div>

                    </div>
                </div>
                <hr>
                {{/each}}
                <button type="submit" class="btn btn-default btn-lg btn-block">Update &nbsp;&nbsp;
                    <i class="fa fa-pencil fa-lg"></i>
                </button>
            </form>

        </div>
        <div class="col-8" style="margin-top: -50px;">
            <div>
                <div class="row">
                    <div class="col">
                        <h2 style="text-align: left;">Students - {{course.displayName}}
                        </h2>
                    </div>
                    <div class="col">
                        <a href="/courses/admitcard?id={{course._id}}"><button type="button" class="btn btn-info"
                                style="width:100%"><i class="fa fa-exchange fa-lg"></i>&nbsp;Admit Cards</button></a>
                        <div class="col" style="text-align: right;">
                            Report Card
                            <div class="dropdown" id="customized-dropdown">
                                <button type="button" class="btn btn-default" data-toggle="dropdown">
                                    <i class="fa fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-right animated fadeIn">
                                    <li class="view-item">
                                        <a class="dropdown-item"
                                            href="/courses/reportcard?id={{course._id}}&type=Quarterly">
                                            Quarterly
                                        </a>
                                    </li>
                                    <li class="view-item">
                                        <a class="dropdown-item"
                                            href="/courses/reportcard?id={{course._id}}&type=Halfyearly">
                                            Half yearly
                                        </a>
                                    </li>
                                    <li class="view-item">
                                        <a class="dropdown-item"
                                            href="/courses/reportcard?id={{course._id}}&type=Annual">
                                            Annual
                                        </a>
                                    </li>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{#if students}}
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Date Of Birth</th>
                        <th scope="col">Fathers Name</th>
                        <th scope="col">Mothers Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each students}}
                    <tr>
                        <td>{{StudentName.FirstName}}&nbsp;{{StudentName.LastName}}</td>
                        <td>{{Gender}}</td>
                        <td>{{DateOfBirth}}</td>
                        <td>{{FathersName}}</td>
                        <td>{{MothersName}}</td>
                        <td>{{PhoneNumber}}</td>
                        <td>
                    <div class="dropdown" id="customized-dropdown">
                        <button type="button" class="btn btn-default" data-toggle="dropdown">
                            <i class="fa fa-ellipsis-v"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right animated fadeIn">
                            <li class="view-item">
                                <a class="dropdown-item" href="/students/edit?id={{_id}}">
                                    Edit
                                </a>
                            </li>
                            <li class="view-item">
                                <a class="dropdown-item" href="/students/details?id={{_id}}">
                                    View
                                </a>
                            </li>
                            <li class="view-item">
                                <a href="#" class="dropdown-item" onclick="deleteItem('/students/{{_id}}');">Delete</a>
                            </li>
                        </div>
                    </div>
                </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

            {{#unless user.privileges.update}}
            <script>
                let updateItems = document.getElementsByClassName('edit-item'), count;

                for (count = 0; count < updateItems.length; count++) {
                    updateItems[count].style.display = 'none';
                }
            </script>
            {{/unless}}

            {{#unless user.privileges.delete}}
            <script>
                let items = document.getElementsByClassName("del-item"), i;

                for (i = 0; i < items.length; i++) {
                    items[i].style.display = 'none';
                }
            </script>
            {{/unless}}

            <br>

            <ul class="pagination">
                {{#paginate current=current pages=pages}} {{/paginate}}
            </ul>
            {{else}}
            <p>No records found...</p>
            {{/if}}
        </div>

    </div>
</div>