<div class="container-fluid" id="container-fluid">
    {{#if student}}
    <form class="form-add-student needs-validations" action="/students/tc/{{student._id}}" method="POST"
        style="z-index:1;" novalidate>
        {{errors}}
        {{#each errors}}
        <div class="alert alert-danger" style="height:60px;padding-top:20px;">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="margin-top:0px;">
                <span aria-hidden="true">&times;</span>
            </button>
            <div class="media">
                <i class="fa fa-exclamation-triangle fa-2x" aria-hidden="true"></i>
                <div class="media-body ml-4">
                    <strong>{{text}}</strong>
                </div>
            </div>
        </div>
        {{/each}}

        <fieldset>
            <h4>Relieving Detail's</h4>
            <p>Enter Relieving detail's of the student.</p>
            <hr>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="TCNumber">TC Number ( <span>*</span> )</label>
                    <input type="text" class="form-control" value="{{student.RelievingDetails.TCNumber}}"
                        name="TCNumber" placeholder="TC Number" required autocomplete="off">
                </div>
                <div class="form-group col-md-2">
                    <label for="Status">Status ( <span>*</span> )</label>
                    <select name="Status" class="form-control custom-select" required autocomplete="off">
                        {{#select student.RelievingDetails.Status}}
                        <option value="">Choose...</option>
                        <option value="PASS">PASS</option>
                        <option value="FAIL">FAIL</option>
                        {{/select}}
                    </select>
                </div>


                <div class="form-group col-md-4">
                    <label for="RelievingReason">Relieving Reason ( <span>*</span> )</label>
                    <input type="text" class="form-control" value="{{student.RelievingDetails.RelievingReason}}"
                        name="RelievingReason" placeholder="Relieving Reason" required autocomplete="off">
                </div>

            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="DateOfRelieving">Date Of Relieving ( <span>*</span> )</label>
                    <input id="datepicker" type="text" value="{{student.RelievingDetails.DateOfRelieving}}"
                        class="form-control" name="DateOfRelieving" placeholder="Day / Month / Year" required
                        autocomplete="off">
                </div>
                <div class="form-group col-md-4">
                    <label for="TCDate">Date Of TC ( <span>*</span> )</label>
                    <input id="datepicker2" type="text" value="{{student.RelievingDetails.TCDate}}" class="form-control"
                        name="TCDate" placeholder="Day / Month / Year" required autocomplete="off">
                </div>

            </div>

        </fieldset>
        <p>
            <button type="submit" class="btn btn-default btn-block btn-lg">Save Details & Create TC &nbsp;
                <i class="fa fa-paper-plane fa-lg"></i>
            </button>
        </p>
    </form>

    <div class="card view-card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-9">
                    <h4 class="display-5 mt-3">Student Detail's</h4>
                </div>
                <div class="col-md-3 d-flex flex-row-reverse">
                    <a href="/students/edit?id={{student._id}}" class="btn btn-secondary">
                        <i class="fa fa-pencil"></i>Edit &nbsp;
                    </a>
                </div>
            </div>

            <hr>

            <h5 class="card-title">Personal Detail's</h5>

            <div class="row">
                <div class="col-md-4">
                    <label for="">Student Name</label>
                    <p>{{student.StudentName.FirstName}}&nbsp;{{student.StudentName.LastName}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Gender</label>
                    <p>{{student.Gender}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Category</label>
                    <p>{{student.Category}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label for="">Date Of Birth</label>
                    <p>{{student.DateOfBirth}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Date Of Admission</label>
                    <p>{{student.DateOfAdmission}}</p>
                </div>
            </div>

            <hr>

            <h5 class="card-title">SSSID Detail's</h5>

            <div class="row">
                <div class="col-md-4">
                    <label for="">SSSID</label>
                    <p>{{student.SSSID}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Aadhar</label>
                    <p>{{student.Aadhar}}</p>
                </div>
            </div>

            <hr>

            <h5 class="card-title">Parent / Guardian Detail's</h5>

            <div class="row">
                <div class="col-md-4">
                    <label for="">Father's Name</label>
                    <p>{{student.FathersName}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Father's Occupation</label>
                    <p>{{student.FathersOccupation}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label for="">Mother's Name</label>
                    <p>{{student.MothersName}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Mother's Occupation</label>
                    <p>{{student.MothersOccupation}}</p>
                </div>
            </div>

            <hr>

            <h5 class="card-title">Contact Detail's</h5>

            <div class="row">
                <div class="col-md-4">
                    <label for="">Email Address</label>
                    <p>{{student.Email}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Phone Number</label>
                    <p>{{student.PhoneNumber}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Address</label>
                    <p>{{student.Address.Address_Line_1}},&nbsp;{{student.Address.Address_Line_2}}&nbsp;{{student.Address.City}},&nbsp;{{student.Address.State}},&nbsp;{{student.Address.PostalCode}},&nbsp;{{student.Address.Country}}
                    </p>
                </div>
            </div>

            <hr>

            <h5 class="card-title">Class Detail's</h5>
            <div class="row">
                <div class="col-md-4">
                    <label for="">Class Admitted To</label>
                    <p>{{student.Class}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Session</label>
                    <p>{{student.Session}}</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <label for="">Registration Number till 8th</label>
                    <p>{{student.RegistrationNo1}}</p>
                </div>
                <div class="col-md-4">
                    <label for="">Registration Number 9th - 10th</label>
                    <p>{{student.RegistrationNo2}}</p>
                </div>
            </div>
        </div>
    </div>

    {{/if}}
</div>

